<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rupizza.SpecialtyPizzaController">
   <children>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0">
         <children>
            <Label layoutX="88.0" layoutY="16.0" text="SPECIALTY PIZZA">
               <font>
                  <Font name="American Typewriter Semibold" size="25.0" />
               </font>
            </Label>
            <VBox layoutX="214.0" layoutY="127.0" prefHeight="89.0" prefWidth="150.0">
               <children>
                  <RadioButton fx:id="smallButton" mnemonicParsing="false" onAction="#handleSizeButtons" prefHeight="25.0" prefWidth="86.0" text="Small">
                     <font>
                        <Font name="Noteworthy Bold" size="15.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="pizzaSize" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="mediumButton" mnemonicParsing="false" onAction="#handleSizeButtons" prefHeight="25.0" prefWidth="90.0" text="Medium" toggleGroup="$pizzaSize">
                     <font>
                        <Font name="Noteworthy Bold" size="15.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="largeButton" mnemonicParsing="false" onAction="#handleSizeButtons" prefHeight="25.0" prefWidth="95.0" text="Large" toggleGroup="$pizzaSize">
                     <font>
                        <Font name="Noteworthy Bold" size="15.0" />
                     </font>
                  </RadioButton>
               </children>
            </VBox>
            <ImageView fx:id="pizzaImageView" fitHeight="169.0" fitWidth="179.0" layoutX="25.0" layoutY="57.0" preserveRatio="true">
               <image>
                  <Image url="@deluxePizza.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="specialtyComboBox" layoutX="214.0" layoutY="80.0" onAction="#handleSpecialtyComboBox" prefHeight="26.0" prefWidth="173.0" promptText="Select Specialty Pizza" />
            <ListView fx:id="toppingsListView" layoutX="25.0" layoutY="264.0" prefHeight="175.0" prefWidth="200.0" />
            <Label layoutX="25.0" layoutY="221.0" text="Toppings">
               <font>
                  <Font name="Noteworthy Bold" size="23.0" />
               </font>
            </Label>
            <Label layoutX="248.0" layoutY="221.0" text="Sauce">
               <font>
                  <Font name="Noteworthy Bold" size="23.0" />
               </font>
            </Label>
            <VBox layoutX="249.0" layoutY="312.0" prefHeight="73.0" prefWidth="124.0">
               <children>
                  <CheckBox fx:id="extraSauceCheckBox" mnemonicParsing="false" onAction="#handleExtraSauce" prefHeight="30.0" prefWidth="120.0" text="Extra Sauce">
                     <font>
                        <Font name="Noteworthy Bold" size="15.0" />
                     </font>
                  </CheckBox>
                  <CheckBox fx:id="extraCheeseCheckBox" mnemonicParsing="false" onAction="#handleExtraCheese" prefHeight="30.0" prefWidth="120.0" text="Extra Cheese">
                     <font>
                        <Font name="Noteworthy Bold" size="15.0" />
                     </font>
                  </CheckBox>
               </children>
            </VBox>
            <Button fx:id="addToOrderButton" layoutX="248.0" layoutY="452.0" mnemonicParsing="false" onAction="#handleAddToOrderButton" prefHeight="26.0" prefWidth="120.0" text="Add to Order" />
            <Label layoutX="25.0" layoutY="447.0" prefHeight="34.0" prefWidth="72.0" text="Price   $">
               <font>
                  <Font name="Noteworthy Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="sauceTextField" editable="false" layoutX="249.0" layoutY="264.0" prefHeight="26.0" prefWidth="124.0">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="priceTextField" editable="false" layoutX="105.0" layoutY="448.0" prefHeight="26.0" prefWidth="124.0">
               <font>
                  <Font size="17.0" />
               </font>
            </TextField>
         </children>
      </Pane>
   </children>
</AnchorPane>
